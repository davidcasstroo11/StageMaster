<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenidoPago"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/borde_cabecera">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Realizar pago"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoInfoPago"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="110dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text="XXX"
            android:textAlignment="center"
            android:textColor="@color/purple_light"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/textoPrecio"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="110dp"
            android:background="@drawable/borde_input"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:text="XXX"
            android:textAlignment="center"
            android:textColor="@color/purple_light"
            android:textSize="29dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="457dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borde_form">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputNombreApellidos"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:background="@drawable/borde_input"
                android:hint="Nombre y apellidos" />

            <EditText
                android:id="@+id/inputDireccion"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:background="@drawable/borde_input"
                android:hint="Dirección" />

            <EditText
                android:id="@+id/inputNumeroCuenta"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:maxLength="12"
                android:paddingLeft="10dp"
                android:background="@drawable/borde_input"
                android:hint="Nº Cuenta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputCVC"
                    android:layout_width="150dp"
                    android:layout_height="43dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="start"
                    android:inputType="number"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/borde_input"
                    android:maxLength="3"
                    android:hint="CVC" />

                <Spinner
                    android:id="@+id/selectMes"
                    android:layout_width="60dp"
                    android:layout_height="43dp"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/borde_input"
                    android:hint="Fecha Cad." />

                <Spinner
                    android:id="@+id/selectAnio"
                    android:layout_width="60dp"
                    android:layout_height="43dp"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/borde_input"
                    android:hint="Fecha Cad." />

            </LinearLayout>

            <Button
                android:id="@+id/btnPagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borde_boton"
                android:text="Pagar" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/borde_boton"
                android:text="Cancelar" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>